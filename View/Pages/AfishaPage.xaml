<Page x:Class="KinoAfisha.View.Pages.AfishaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinoAfisha.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="1600" 
      Title="Афиша" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="300" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>
        <!--#region-->
            <ListBox Name="FilmsLb" Grid.Row="0" Background="Lavender"
                     DisplayMemberPath="{Binding Film}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 Grid.RowSpan="3"
                     Width="1600" Height="880" Margin="5" d:ItemsSource="{d:SampleData ItemCount=5}"
                     >
            <ListBox.ItemsPanel>
                <!-- Здесь задаем вертикальное расположение -->
                <ItemsPanelTemplate>
                    
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="25" />
                            <ColumnDefinition Width="75" />
                            <ColumnDefinition Width="500" />

                        </Grid.ColumnDefinitions>
                        <Image Grid.ColumnSpan="4" Width="50" Height="50" Source="{Binding Poster}" />
                        <TextBlock Grid.Row="2" Grid.ColumnSpan="4" Text="{Binding Title}"/>
                        <TextBlock Grid.Row="4" Text="{Binding Rating}"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text ="{Binding ReleaseDate,  StringFormat=dd/MM/yyyy}"
                                   />
                        <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding DurationInMinutes, StringFormat=hh/MM}"/>
                        <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding Languages}"/>
                        <TextBlock Grid.Row="6" Grid.ColumnSpan="5" TextWrapping="Wrap" Text="{Binding ShortDescription}"/>
                        <TextBlock Grid.Row="8" Grid.ColumnSpan="5" TextWrapping="Wrap" Text="{Binding FullDescription}"/>
                        <TextBlock Grid.Row="10" Text="{Binding OriginalTitle}"/>
                    </Grid>
                </DataTemplate>

            </ListBox.ItemTemplate>

            </ListBox>
            <!--#endregion-->
    </Grid>
</Page>
