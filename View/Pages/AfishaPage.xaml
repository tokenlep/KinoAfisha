<Page x:Class="KinoAfisha.View.Pages.AfishaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinoAfisha.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="880" d:DesignWidth="1600" 
      Title="Афиша" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300" />
            <RowDefinition Height="300" />
            <RowDefinition Height="300" />
        </Grid.RowDefinitions>
        <!--#region-->
            <ListBox Name="FilmsLb" Grid.Row="0" Background="Lavender"
                     DisplayMemberPath="{Binding Film}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                 Grid.RowSpan="3"
                     Width="1600" Height="880" Margin="5" d:ItemsSource="{d:SampleData ItemCount=5}"
                     >
            <ListBox.ItemsPanel>
                <!-- Здесь задаем вертикальное расположение -->
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Width="500" Height="50">
                            <Image  Width="50" Height="50" Source="{Binding Poster}" />
                            <TextBlock Text="{Binding Title}" Height="50"/>
                        <TextBlock Width="5"/>
                        <TextBlock Text="{Binding Rating}" Width="50"/>
                            <TextBlock Text ="{Binding ReleaseDate,  StringFormat=dd/MM/yyyy}"
                                   Width="50"/>
                            <TextBlock Text="{Binding DurationInMinutes, StringFormat=hh/MM}"/>
                            <TextBlock Text="{Binding Languages}" Width="50"/>
                            <TextBlock Text="{Binding ShortDescription}" Width="50"/>
                            <TextBlock Text="{Binding FullDescription}" Width="50"/>
                            <TextBlock Text="{Binding OriginalTitle}" Width="50"/>

                     </StackPanel>
                </DataTemplate>

            </ListBox.ItemTemplate>

            </ListBox>
            <!--#endregion-->
    </Grid>
</Page>
