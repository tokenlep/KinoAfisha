<Page x:Class="KinoAfisha.View.Pages.AdministrationFilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinoAfisha.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="АдминистрированиеФильмов" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Постер:" Grid.Row="0" Grid.Column="0"/>
            <TextBox Grid.Row="0" Grid.Column="1" Height="50" Name="PosterTb"/>
            
            <TextBlock Text="Название:" Grid.Row="2" Grid.Column="0"/>
            <TextBox Grid.Row="2" Grid.Column="1" Height="50" Name="TitleTb"/>

            <TextBlock Text="Жанр:" Grid.Row="4" Grid.Column="0"/>
            <TextBox Grid.Row="4" Grid.Column="1" Height="50" Name="GenreTb"/>

            <TextBlock Text="Видео:" Grid.Row="6" Grid.Column="0"/>
            <TextBox Grid.Row="6" Grid.Column="1" Height="50" Name="VideoTb"/>

            <TextBlock Text="Режиссеры:" Grid.Row="8" Grid.Column="0"/>
            <TextBox Grid.Row="8" Grid.Column="1" Height="50" Name="DirectorsTb"/>

            <TextBlock Text="Полное описание:" Grid.Row="10" Grid.Column="0"/>
            <TextBox Grid.Row="10" Grid.Column="1" Height="50" Name="FullDescriptionTb"/>

            <TextBlock Text="Актеры:" Grid.Row="12" Grid.Column="0"/>
            <TextBox Grid.Row="12" Grid.Column="1" Height="50" Name="ActorsTb"/>

            <Button Name="AddFilmBtn" Grid.Row="13" Grid.Column="1" Content="Добавить фильм"/>
            
            

        </Grid>
        
        
    </Grid>
</Page>
