<Page x:Class="KinoAfisha.View.Pages.FilmPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinoAfisha.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920" Background="LightGray"
      Title="Фильм">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <ListBox Name="PosterLb">
            <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" 
                        Source="{Binding Poster}" Stretch="UniformToFill"/>
                        <TextBlock Grid.Row="1" Text="{Binding Film.Title}" FontSize="25" FontWeight="Bold" Margin="0,10,10,0"/>
                        <TextBlock Grid.Row="2">
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0:yyyy} / {1} мин / {2}">
                                    <Binding Path="ReleaseDate"/>
                                    <Binding Path="DurationInMinutes"/>
                                    <Binding Path="AgeLimit.Title"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                        <TextBlock Grid.Row="3" Text="{Binding Genre.Title}" FontSize="16"/>
                        <TextBlock Text="{Binding Film.Rating, StringFormat={}{0:F1}/10}" HorizontalAlignment="Center"/>
                    </Grid>
                </DataTemplate>     
            </ListBox.ItemTemplate>
        </ListBox>



        <ListBox Name="MovieLb" Grid.RowSpan="2" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                    <WrapPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Width="550" Margin="20" BorderThickness="1" BorderBrush="#2B2B2B">

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1080" />
                            </Grid.RowDefinitions>
                            <TextBlock Name="DescriptionTbl" FontSize="15" Text="{Binding FullDescription}" TextWrapping="Wrap" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <!-- Информация о фильме -->

        <ListBox Name="DescriptLb" Grid.Column="2" >
            <ListBox.ItemsPanel>
            <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                            <RowDefinition Height="50" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Оригинальное название" Grid.Row="0"/>
                        <TextBlock Text="{Binding OriginalTitle}" Grid.Row="1"/>
                        <TextBlock Text="Языки" Grid.Row="2"/>
                        <TextBlock Text="{Binding Languages}" Grid.Row="3"/>
                        <TextBlock Text="Краткое описание" Grid.Row="4"/>
                        <TextBlock Text="{Binding ShortDescription}" Grid.Row="5"/>
                        <TextBlock Text="Страна" Grid.Row="6"/>
                        <TextBlock Text="{Binding Country.Title}" Grid.Row="7"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <ListBox Name="CinemaLb" Grid.Column="2" Grid.Row="1">
            <ListBox.ItemsPanel>

                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>

            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="80" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="В ролях:" Grid.Row="0" />
                        <TextBlock Text="{Binding Name}" Grid.Row="1"/>
                        <TextBlock Text="{Binding Surname}" Grid.Row="2"/>
                        <TextBlock Text="Дата рождения" Grid.Row="3" />
                        <TextBlock Text="{Binding DateBirth}" Grid.Row="4"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
       














    </Grid>
</Page>
